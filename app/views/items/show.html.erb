<%= stylesheet_link_tag 'pages/_indiv_item', media: 'all', 'data-turbolinks-track': 'reload' %>

<h3><strong class="item-name"><%= @item.name.capitalize %></strong></h3>
<h4>Category: <%= @item.category %></h4>
<% @item.photos.each do |photo| %>
  <% if @item.photos.first %>
    <%= cl_image_tag @item.photos.first.key, height: 300, width: 400, crop: :fill %>
  <% end %>
<% end %>
<h4>Description: <%= @item.description %></h4>
<h4>Price: <%= @item.price %></h4>
<% if @item.user != current_user %>
  <%= simple_form_for [@item, @offer] do |f| %>
    <%= f.input :price %>
    <%= f.submit %>
  <% end %>
<% end %>

<% if policy(@item).destroy? %>
  <%= link_to "Remove this item",
    item_path(@item), method: :delete,
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
    class: "remove-item-link"
  %>
<% end %>
